{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Publicación</h3>
        </div>
        <div class="card-body">
            <form action="/posts/edit/{{_id}}" method="POST">
                <input type="hidden" name="_method" value="put">
                <input type="hidden" name="post_id" value="{{post.id}}">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Título" value="{{post.title}}" autofocus>
                </div><br>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripción">{{post.description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="sector">Área:</label>
                    <select name="sector" class="form-control">
                        <option value="reposicion" {{#if (eq post.sector "reposicion")}}selected{{/if}}>De Reposición</option>
                        <option value="proveedores" {{#if (eq post.sector "proveedores")}}selected{{/if}}>De Proveedores</option>
                        <option value="transferencias" {{#if (eq post.sector "transferencias")}}selected{{/if}}>De Transferencias</option>
                    </select>
                </div>
                <hr>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
