{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nueva Publicación</h3>
        </div>
        <div class="card-body">
            <form action="/posts/new-post" method="post">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Título" autofocus>
                </div><br>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripción"></textarea>
                </div><br>
                <div class="form-group">
                    <label for="sector">Sector:</label>
                    <select name="sector" class="form-control">
                        <option value="reposicion">De Reposición</option>
                        <option value="proveedores">De Proveedores</option>
                        <option value="transferencias">De Transferencias</option>
                    </select>
                </div>
                <br>
                <br>
                <hr>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

